<%- include('includes/head') %>
<%- include('includes/navbar') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">

      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Crie ou edite seu contato abaixo.</p>
      <%- include('includes/messages') %>

      <form action="/contato/register" method="POST"> 

        <!-- Sempre ative o sistema CSRF em Formulários -->
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>

        <div class="mb-3">
          <label>Nome</label>
          <input value="<%= contato.nome %>" type="text" class="form-control" name="nome"> <!-- O "name" é responsável por criar as propriedades do req. body-->
        </div>

        <div class="mb-3">
          <label>Sobrenome</label>
          <input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome">
        </div>

        <div class="mb-3">
          <label>Email</label>
          <input value="<%= contato.email %>" type="email" class="form-control" name="email">
        </div>

        <div class="mb-3">
          <label>Telefone</label>
          <input value="<%= contato.telefone %>" type="tel" class="form-control" name="telefone">
        </div>

        <button type="submit" class="btn btn-primary">Cadastrar contato!</button>
      </form>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>